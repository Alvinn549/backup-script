PROJECT_NAME="test"

# Path to the project source code (files to be backed up)
SOURCE_DIR="/home/alvin/projects/test"

# Base directory where backups will be stored
BACKUP_DIR="/home/alvin/backups"

# ===========================
# Retention
# ===========================

# How many days to keep old backups before deleting them
RETAIN_DAYS=7

# ===========================
# Compression
# ===========================

# Compression algorithm for project archives
# Options: "zstd" (faster, modern) | "xz" (slower, smaller)
COMPRESSOR="zstd"

# ===========================
# Telegram (optional upload)
# ===========================

# Telegram bot token (leave empty to disable Telegram upload/notify)
TG_BOT_TOKEN=

# Telegram chat ID (group/channel/user) where backups/logs are sent
TG_CHAT_ID=

# Maximum size (in MB) of files to send to Telegram before splitting
# Example: if archive > 5 MB, it will split into .part000, .part001, etc.
SPLIT_SIZE_MB=5

# ===========================
# Exclusions
# ===========================

# Space-separated list of folders/files to exclude from project backup
# Example: "vendor node_modules .git"
EXCLUDES="vendor"

# ===========================
# Resource Controls
# ===========================

# nice (CPU priority): 0 = normal, 19 = lowest priority
NICE_LEVEL=10

# ionice (I/O priority): 
#   Class 2 = best-effort scheduling, with priority 0â€“7 (0 = highest)
IONICE_CLASS=2
IONICE_PRIORITY=7

# ===========================
# Optional GPG Encryption
# ===========================

# Enable encryption for project archives: "yes" or "no"
ENABLE_GPG="yes"

# GPG key fingerprint of recipient (must be imported & trusted)
# Find with: gpg --list-keys --with-fingerprint
GPG_RECIPIENT=

# ===========================
# MySQL Database Backup
# ===========================

# Enable MySQL database backup: "yes" or "no"
ENABLE_DB_BACKUP="yes" 
DB_HOST="127.0.0.1"
DB_PORT="3306"
DB_NAME="test"
DB_USER="root"
DB_PASS=""

# Extra options for mysqldump (optional)
# Example: "--ignore-table=mydb.logs"
DB_EXTRA_OPTS=""
